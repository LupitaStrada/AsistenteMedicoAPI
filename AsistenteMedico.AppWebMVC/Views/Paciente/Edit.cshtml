@model AsistenteMedico.DTOs.PacienteDTOs.EditPacienteDTO

@{
    ViewData["Title"] = "Editar Paciente";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm border-0">

    <div class="card-header bg-white">
        <h5 class="card-title mb-0">Modificar Datos del Paciente</h5>
    </div>

    <div class="card-body">

        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="PrimerNombre" class="form-label"></label>
                    <input asp-for="PrimerNombre" class="form-control" />
                    <span asp-validation-for="PrimerNombre" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Apellido" class="form-label"></label>
                    <input asp-for="Apellido" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Telefono" class="form-label"></label>
                    <input asp-for="Telefono" class="form-control" type="tel" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>

            <hr class="my-4" />
            <h6 class="text-primary mb-3">Contacto de Emergencia</h6>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ContactoEmergencia" class="form-label"></label>
                    <input asp-for="ContactoEmergencia" class="form-control" />
                    <span asp-validation-for="ContactoEmergencia" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="TelefonoEmergencia" class="form-label"></label>
                    <input asp-for="TelefonoEmergencia" class="form-control" type="tel" />
                    <span asp-validation-for="TelefonoEmergencia" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3 form-check">
                    <input asp-for="RecibirSms" class="form-check-input" type="checkbox" />
                    <label asp-for="RecibirSms" class="form-check-label"></label>
                    <span asp-validation-for="RecibirSms" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3 form-check">
                    <input asp-for="RecibirEmail" class="form-check-input" type="checkbox" />
                    <label asp-for="RecibirEmail" class="form-check-label"></label>
                    <span asp-validation-for="RecibirEmail" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4 pt-3 border-top">

                <button type="submit" class="btn btn-success me-3">
                    <i class="fas fa-save me-1"></i> Guardar Cambios
                </button>

                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info me-3">
                    <i class="fas fa-eye me-1"></i> Ver Detalles
                </a>

                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Volver al Listado
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}