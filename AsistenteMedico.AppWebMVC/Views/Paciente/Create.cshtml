@model AsistenteMedico.DTOs.PacienteDTOs.CreatePacienteDTOs

@{
    ViewData["Title"] = "Crear Nuevo Paciente";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm border-0">

    <div class="card-header bg-white">
        <h5 class="card-title mb-0">Información General del Paciente</h5>
    </div>

    <div class="card-body">

        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="PrimerNombre" class="form-label"></label>
                    <input asp-for="PrimerNombre" class="form-control" />
                    <span asp-validation-for="PrimerNombre" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Apellido" class="form-label"></label>
                    <input asp-for="Apellido" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Telefono" class="form-label"></label>
                    <input asp-for="Telefono" class="form-control" type="tel" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FechaNacimiento" class="form-label"></label>
                    <input asp-for="FechaNacimiento" class="form-control" type="date" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="CentroId" class="form-label"></label>
                    <input asp-for="CentroId" class="form-control" />
                    <span asp-validation-for="CentroId" class="text-danger"></span>
                </div>
            </div>

            <hr class="my-4" />
            <h6 class="text-primary mb-3">Contacto de Emergencia</h6>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ContactoEmergencia" class="form-label"></label>
                    <input asp-for="ContactoEmergencia" class="form-control" />
                    <span asp-validation-for="ContactoEmergencia" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="TelefonoEmergencia" class="form-label"></label>
                    <input asp-for="TelefonoEmergencia" class="form-control" type="tel" />
                    <span asp-validation-for="TelefonoEmergencia" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3 form-check">
                    <input asp-for="RecibirSms" class="form-check-input" type="checkbox" />
                    <label asp-for="RecibirSms" class="form-check-label"></label>
                    <span asp-validation-for="RecibirSms" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3 form-check">
                    <input asp-for="RecibirEmails" class="form-check-input" type="checkbox" />
                    <label asp-for="RecibirEmails" class="form-check-label"></label>
                    <span asp-validation-for="RecibirEmails" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3" style="display:none;">
                <label asp-for="NumeroPaciente" class="form-label"></label>
                <input asp-for="NumeroPaciente" class="form-control" />
                <span asp-validation-for="NumeroPaciente" class="text-danger"></span>
            </div>

            <div class="mt-4 pt-2 border-top">
                <button type="submit" value="Create" class="btn btn-secondary me-2">
                    <i class="fas fa-save me-1"></i> Guardar Paciente
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Volver al Listado
                </a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}